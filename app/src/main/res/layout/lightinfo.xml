<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:showIn="@layout/activity_main"
            tools:context=".MainActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/my_lights_recycler_view"
                android:scrollbars="vertical" android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary" android:layout_marginStart="0dp"
                tools:listitem="@layout/recycler_view_item" android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </RelativeLayout>

    <TextView
            android:text="The Recycler view with the lights"
            android:layout_width="217dp"
            android:layout_height="37dp"
            android:id="@+id/LightIdToFill" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="120dp" android:layout_marginStart="120dp"/>
    <ImageButton
            android:layout_width="83dp"
            android:layout_height="88dp" app:srcCompat="@drawable/back_button"
            android:id="@+id/imageButton"
            android:onClick="BackToWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/back_button" android:scaleType="fitCenter"/>

</android.support.constraint.ConstraintLayout>