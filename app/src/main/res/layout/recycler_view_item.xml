<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
          android:id="@+id/imageView2"
          android:layout_width="50dp"
          android:layout_height="50dp"
          tools:src="@tools:sample/avatars"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="8dp" android:layout_marginLeft="8dp"/>

  <TextView
          android:id="@+id/LightIdToFill"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="LightIdToFill"
          android:textSize="20sp"
          android:textColor="@android:color/black"
          app:layout_constraintTop_toTopOf="@+id/imageView2"
          app:layout_constraintStart_toEndOf="@+id/imageView2"
          android:layout_marginStart="8dp"
          android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toTopOf="@+id/textLevel" android:layout_marginLeft="8dp"/>

  <TextView
          android:id="@+id/textLevel"
          android:layout_width="43dp"
          android:layout_height="20dp"
          tools:text="level"
          app:layout_constraintBottom_toBottomOf="@+id/imageView2"
          android:layout_marginBottom="2dp" app:layout_constraintStart_toEndOf="@+id/textView"
          android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

  <Switch
          android:id="@+id/switchLight"
          android:layout_width="56dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/LightIdToFill"
          android:layout_marginLeft="90dp" android:layout_marginStart="90dp"/>
  <TextView
          android:text="Level : "
          android:layout_width="wrap_content"
          android:layout_height="18dp"
          android:id="@+id/textView"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/LightIdToFill"
          app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginLeft="8dp"
          android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>